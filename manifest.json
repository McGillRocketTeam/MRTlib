{
    "name": "MRTlib",
    "description": "Chrome extension for the McGill Rocket Team's SMD components library.",
    "version": "1.0",
    "author": "Luca D'Angelo",
    "manifest_version": 2,
    "page_action": {
        "default_title": "MRTlib",
        "default_popup": "popup.html"
    },
    "permissions": ["declarativeContent"],
    "background": {
        "scripts": ["background.js"], 
        "persistent": false
    }
}